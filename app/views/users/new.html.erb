        <%# サインアップ %>
        <div id="contact">
          <div class="container">
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <h3>Sign Up</h3>
                
                <div class="hr-small aligncenter"></div>
                <div class="contact-form php-mail-form">
                  <%= form_for(@user) do |f| %>
                    <%= render 'layouts/error_messages', model: f.object %>
                    <div class="form-group">
                      <%= f.label :name, 'Name' %>
                      <%= f.text_field :name, :placeholder => "Your Name (12文字以内)", class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :email, 'Email' %>
                      <%= f.email_field :email, :placeholder => "Your Email", class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, 'Password' %>
                      <%= f.password_field :password, :placeholder => "Password (6文字以上)", class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password_confirmation, 'Confirmation' %>
                      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", class: 'form-control' %>
                    </div>
                    <div class="form-send">
                      <button type="submit" class="btn btn-large" name="commit">Sign Up!</button>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      
<!-- / contact -->
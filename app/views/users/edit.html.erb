<div style="row padding-top:10px;">
        <header>

      <!--検索拡張機能  -->
      <div class="media-body">

      </div>
      <div class="media-right">
      <!-- ロゴ -->
          <h1><%= link_to image_tag("logo.png", :alt => "Fobitows"), root_path %></h1></p>
      </div>
        </header> 
        <!--ここからwrapperー-->
        <div id="wrapper" class="clearfix">
            <!--ここからメイン-->
            <div id="main2">
                <section id="point">
                    <h2></h2>
                    <section class="clearfix">
                        <figure>
                            <figcaption></figcaption>
                        </figure>
                        <h3><%= @user.name %> さんのプロフィール設定ページ</h3>
                        <p>
  <hr>
<%= form_for(@user) do |f| %>      
  <div class="row">
    <aside class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">

          <div class="panel-body">
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
<!-- 追加箇所 開始 -->
            <div class="thumbnail">  
  
              <% if @user.image? %>
                <%= image_tag(@user.image.url, :size => "300x300") %>

              <% else %>
              <span class="gravatar">
                <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(current_user, size: "300") %>" alt="">
              </span>
<%#                <%= image_tag("panda.png", :size => "300x300") %>
              <% end %>
            </div>
            <%= link_to 'Back', user_path(@user) %>
          
      </div>
    </div>
  </aside>
  <br><br><br>

  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">

      <div class="field">
        <p><%= f.label :image, 'プロフィール画像' %>&nbsp;<font class='required'>(正方形にトリミングされます)</font></p>
        
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>

      <div class="field">
<!-- 既存レコード(DBに保存されている)かつ、画像が存在する場合 -->
        <% if @user.persisted? && @user.image? %>
          <label>
            <%= f.check_box :remove_image %>
            画像を削除
          </label>
        <% end %>
      </div>
      <br>
<!-- 追加箇所 終了 -->
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <span class="field-img"><%= f.text_area :name, class: 'form-control', rows: 1 %></span>
      </div>
      <div class="form-group">
        <%= f.label :comment, 'Comment' %>
        <span class="field-img"><%= f.text_area :comment, class: 'form-control', rows: 2 %></span>
      </div>
      <div class="actions">
        <%= f.submit 'Update', class: 'btn btn-primary btn-md' %>
      </div>
    </ul>
  </div>
<% end %>

                        </p>
                    </section>
                </section>
            </div>
            
        </div>
        <!--wrapperここまで-->
        <!--ここからフッター-->
        <!--フッターここまで--> 
<%#<% end %>
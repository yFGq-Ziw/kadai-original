<%#                        </div>
%>-->
                        <%= f.submit 'Update', class: 'btn btn-primary btn-block' %>
  
                      <% end %>
      
                      <% if @fobitow.released? %>
<%#        <%= link_to '非公開にする', nonrelease_fobitows_path(@fobitow), method: :patch %>
                      <% else %>
<%#        <%= link_to '公開する', release_fobitows_path(@fobitow), method: :patch %>
                      <% end %>

                    <div class="pro-link">
                      <%= link_to 'Back', :back %> | 
                      <%= link_to 'Top', root_path %>
                  </div>

                </div>
              </div>
            </div>
          </div>
      </section>
    </section>
  </div>
</div>

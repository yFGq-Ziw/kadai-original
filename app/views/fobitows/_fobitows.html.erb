<ul class="media-list">
  <% fobitows.each do |fobitow| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(fobitow.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to fobitow.user.name, user_path(fobitow.user) %> <span class="text-muted">posted at <%= fobitow.created_at %></span>
        </div>
        <div>
          <p><%= fobitow.content %></p>
        </div>
        <div>
          <% if current_user == fobitow.user %>
            <%= link_to "Delete", fobitow, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate fobitows %>
</ul>
  <% if current_user.likes?(fobitow) %>
    <%= form_for(current_user.favorites.find_by(fobitow_id: fobitow.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :fobitow_id, fobitow.id %>
      <%= image_submit_tag "icon_red_heart.png" %>
   <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :fobitow_id, fobitow.id %>
      <%= image_submit_tag "icon_heart.png" %>
    <% end %>
  <% end %>
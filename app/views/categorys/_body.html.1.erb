<!--ここから header -->
<header>
  <div class="media-body">
    <!--検索拡張機能  -->
    <div class="input-search searchForm">
      <%= form_tag root_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search], :placeholder => "Bookmarkを検索" %>
        <button class="searchForm-submit" type="submit"></button>
      <% end %>
    </div>
  </div>
      
  <div class="media-right">
    <!-- ロゴ -->
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag("logo.png", :size => '200x40', :alt => "Bookshare") %> 
      <% end %>
    </div>
  </div>
      
    <nav id="global_navi2">
      <ul>
        <span>
          <%= link_to root_path do %>
                <font color="#666">&nbsp;|&nbsp;</font> 
                総合
            <% end %>
        </span>
        <span>
          <% @co.first(10).each do |c| %>
                <font color="#666">&nbsp;|&nbsp;</font> 
                <%= link_to "#{c[0]} (#{c[1]})", "/categorys/#{c[0]}" %>
          <% end %>
        </span>
        <span><font color="#666">&nbsp;|&nbsp;</font></span> 
      </ul>
    </nav>
    
</header>

<!-- header ここまで -->
<!-- ここから wrapper -->

<div id="wrapper" class="clearfix">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-8">
        <!-- ここからメイン -->
        <div id="main_top">
          <section id="point">
            <section class="clearfix">
              <figure>
                <figcaption>
                  <div>
                    <form action="#index" method="get">
                      <input type="submit" name="button1" value="人気" />
                      <input type="submit" name="button2" value="新着" />
                    </form>
                  </div>
                </figcaption>
              </figure>
              <h3>
                <% if  params[:category] == nil %>
                  総合
                <% else %>
                  <%= params[:category] %>
                <% end %>
                &nbsp;の
                <%= params[:button1] %><%= params[:button2] %>
                エントリー
              </h3>
              <hr>
              <p>
                <%= render 'fobitows/fobitows', fobitows: @fobitows %>               
              </p>
                      
            </section>
            <hr>

            <%= render 'toppages/info' %>               

            <hr>
          </section>
        </div>
      </div>
      <!-- メインここまで -->

      <!-- ここからサイド -->
      <div class="col-lg-4 col-xs-12">
 
        <aside id="sidebar">
          <section id="side_banner">

            <div class="row">
              <li class="col-lg-12 col-xs-12">
                <h2>Bookshare へようこそ</h2>
                <% if logged_in? %>
                  <div class="sign">
                    <%= current_user.name %> さん<br>
                    ログイン中
                    <hr>
                    <p>ブックマークを追加する</p>
                    <p><%= link_to 'Bookmark!', fobitows_path, class: 'btn btn-block btn-primary' %></p>
                    <p>おすすめのブックマークを<br>投稿しましょう！</p>
                  </div>
                <% else %>
                  <div class="sign">
                    <p> -&nbsp;&nbsp;Cloudでブックマークを収集・管理&nbsp;&nbsp;- </p>
                    <p> -&nbsp;&nbsp;便利なブックマークをカンタン共有&nbsp;&nbsp;- </p>
                    <p> -&nbsp;&nbsp;役に立ったら、”いいね！”&nbsp;&nbsp;- </p>
                    <ul>
                      <li><%= link_to 'Sign up', signup_path, class: 'btn btn-block btn-primary' %></li>
                      <li><p>or</p></li>
                      <li><%= link_to 'Log in', login_path, class: 'btn btn-block btn-primary' %></li>
                      <p>さっそく、Bookshare を始めましょう！</p>
                    </ul>
                  </div>
                <% end %>
              </li>
              <!-- ロゴ -->
              <div>
                <%= link_to root_path do %>
                  <%= image_tag("logo.png", :size => '200x40', :alt => "Bookshare") %> 
                <% end %>
              </div>
            </div>
          </section>
        </aside>
        <!-- サイドここまで -->
      </div>
    </div>
  </div>
</div>
<!-- wrapper ここまで -->

<header>
  <nav id="global_navi" class="navbar navbar-inverse">
    <div class="container">
      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          
        <li class="navbar-nav navbar-brand">
          <span class="logo-navi">
            <%= link_to root_path do %>
              <%= image_tag("icon.svg", :size => '35', :alt => "Bookshare") %> 
            <% end %>
          </span>
          <span class="logo3 <%= "current2" if current_page?(root_path) %>">
            <%= link_to root_path do %> 
              <font size="5" face="Times New Roman">Bookshare</font>
            <% end %>
          </span>
        </li>
      </div>
      
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          
          <% if logged_in? %>
            
            <li class="chuo">
              <%= link_to fobitows_path do %>
                <span class="glyphicon glyphicon-bookmark" style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                </span>
                Bookmark!
              <% end %>
            </li>
            
            <li class="chuo <%= "current2" if current_page?(rankings_follow_path) %>">
              <%= link_to rankings_follow_path do %>
                <span class="glyphicon glyphicon-user" style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                </span>
                Users
              <% end %>
            </li>
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <% if current_user.image? %>
                  <%= image_tag(current_user.image.url(:thumb), :size => "33x33", class: "box3") %>
                <% else %>
                
                  <span class="gravatar">
                    <img src="<%= gravatar_url(current_user, size: 33) %>" alt="" class="img-circle">
                  </span>
                <% end %>
                <span class="<%= "current2" if current_page?(user_path(current_user)) %>">
                  <%= current_user.name %>
                </span>
                <span class="caret"></span>
              </a>
              <ul class="drop dropdown-menu">
                <li>
                  <%= link_to user_path(current_user) do %>
                    <span  style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                    </span>
                    My Bookmarks <span class="badge"><%= @count_fobitows %></span>
                  <% end %>
                </li>
              
                <li>
                  <%= link_to followings_user_path(current_user) do %>
                    <span  style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                    </span>
                    Followings <span class="badge"><%= @count_followings %></span>
                  <% end %>
                </li>
              
                <li>
                  <%= link_to followers_user_path(current_user) do %>
                    <span style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                    </span>
                    Followers <span class="badge"><%= @count_followers %></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to likes_user_path(current_user) do %>
                    <i class="far fa-thumbs-up"></i>
                    <span style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                    </span>
                    Favorites <span class="badge"><%= @count_likes %></span>
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
            
                <li><%= link_to 'Logout', logout_path, method: :delete %></li>
              </ul>
            </li>
                
          <% else %>
            <li class="chuo">
              <%= link_to rankings_follow_path do %>
                <span class="glyphicon glyphicon-user" style="font-size: 14px" aria-hidden="true" style="font-size: 15px">
                </span>
                Users
              <% end %>
            </li>
            <li class="chuo"><%= link_to 'Signup', signup_path %></li>
            <li class="chuo"><%= link_to 'Login', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
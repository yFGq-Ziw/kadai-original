<div style="row padding-top:20px;">
        <header>
         
            <h1><%= link_to image_tag("logo.png", :alt => "Fobitows"), root_path %></h1>

        </header> 

        <!--ここからwrapperー-->
        <div id="wrapper" class="clearfix">
            <!--ここからメイン-->
            <div id="main2">
                <section id="point">
                    <h2></h2>
                    <section class="clearfix">
                        <figure>
                            <figcaption></figcaption>
                        </figure>
                        <h3>お気に入りランキング</h3>
                        <p>
                        
<div class="panel panel-default">
  <div class="panel-body">

    <% if @fobitows.present? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>順位</th>
            <th>コメント</th>
            <th>URL</th>
            <th>お気に入り数</th>
          </tr>
        </thead>
  
        <tbody>
          <% @fobitows.each_with_index do |fobitow, index| %>
            <tr>
              <td><div class="text-center"><%= index+1 %> 位</div></td>
              <td><%= fobitow.title %><br>
              <td>
                <span class="glyphicon glyphicon-hand-right"></span>
                <%= text_url_to_link(h(fobitow.content)).html_safe %>
              </td>
              <td><div class="text-right"><%= @ranking_counts[fobitow.id] %></div></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
                        </p>
                    </section>
                </section>
            </div>
        </div>
        <!--wrapperここまで-->
        
        
        <!--ここからフッター-->
        <!--フッターここまで--> 
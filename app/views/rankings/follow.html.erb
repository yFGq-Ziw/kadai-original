<header>

  <!-- ********** HEADER ********** -->
  <section id="home"></section>
  <div id="h2">
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <%= image_tag("logo.png", :height => '34', :alt => "logo") %>
        </div>
      </div>
      <!--/row -->
    </div>
    <!--/container -->
  </div>

  <!--/H -->
</header> 


  <!-- ********** SECOND ********** -->
  <section id="secondsec"></section>
  <div id="second2">
    <div class="row nomargin">
      <div class="col-md-6 col-md-offset-1">
            <h3>Users</h3>
        <div class="hr-small"></div>

              <%= render 'users', users: @users %>

      </div>
      
      
      
      <div class="col-md-5">
        <%= image_tag("chair.png", class:'chair img-responsive aligncenter', :size => "300", :alt => "") %>
      </div>


    </div>
  </div>



  <!-- ********** BOTTOM ********** -->
  <section id="bottomsec"></section>
  <div id="bottom">
  <div class="media-body">
    <!-- ロゴ -->
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag("logo.png", :size => '200x40', :alt => "Bookshare") %> 
      <% end %>
    </div>
  </div>
    <div class="row nomargin">
      <div class="col-md-6 col-md-offset-3">
        <h2>User Search</h2>
        <h5>探したい人がいますか？こちらで検索してみて下さい。</h5>

       <!--検索拡張機能  -->
        <div class="mtb">
            <%= form_tag rankings_follow_path, :method => 'get' do %>
              <%= text_field_tag :search, params[:search], :placeholder => "Please enter the name of the person you want to find....", class: 'subscribe-input' %>
                <button class="btn btn-conf btn-green" type="submit" name="nil">Search!</button>
            <% end %>
        </div>
        <!--/mt-->

        <p class="mt-100">
          <a href="#"><i class="ion-social-twitter"></i></a>
          <a href="#"><i class="ion-social-facebook"></i></a>
          <a href="#"><i class="ion-social-instagram"></i></a>
          <a href="#"><i class="ion-social-youtube"></i></a>
        </p>
      </div>
    </div>
  </div>
  <!--</div>-->


<!-- ○○さん ログイン中 -->
<div id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Welcome to Bookshare!</h3>
        <div class="hr-small aligncenter"></div>
        <% if logged_in? %>
          <p style="text-align:center">
            <%= current_user.name %> さん<br>
            ログイン中<br>
            <hr>
          </p>
          <p style="text-align:center">
            ブックマークを追加する
          </p>
            <div class="contact-form php-mail-form">
              <p style="text-align:center">
                <div class="form-send">
                  <span>
                    <button type="submit" class="btn btn-large">
                      <%= link_to 'Bookmark!', fobitows_path %>
                    </button>
                  </span>
                </div>  
              </p>
            </div>  
          <p style="text-align:center">
            おすすめのブックマークを投稿しましょう！
          </p>
        <% else %>
          <div class="contact-form php-mail-form">
            <p style="text-align:center">
              <div class="form-send">
              <span>
                <button type="submit" class="btn btn-large">
                <%= link_to 'Sign Up', signup_path %>
                </button>
                &nbsp;OR&nbsp;
                <button type="submit" class="btn btn-large">
                <%= link_to 'Log In', login_path %>
                </button>
              </span>
              </div>  
            <p/>
          </div>
          </br>
          <hr>
          <p style="text-align:center">さっそく、Bookshare を始めましょう！</p>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
<!-- / contact -->